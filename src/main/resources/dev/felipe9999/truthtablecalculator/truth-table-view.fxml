<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="305.0" prefWidth="195.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.felipe9999.truthtablecalculator.TruthTableController">
    
    <TextField fx:id="boolenXpTextField" promptText="Enter boolean expression" />
    
    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" prefHeight="100" VBox.vgrow="ALWAYS">
        <TextArea fx:id="resultArea" editable="false" />
    </ScrollPane>
    
    <GridPane hgap="5" vgap="5">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        
        <!-- Row 1 -->
        <Button fx:id="btnOpenParentheses" minWidth="32.0" onAction="#onButtonClick" text="(" GridPane.columnIndex="1" />
        <Button fx:id="btnCloseParentheses" minWidth="32.0" onAction="#onButtonClick" text=")" GridPane.columnIndex="2" />
        <Button fx:id="btnNimply" minWidth="32.0" onAction="#onButtonClick" text="↛" GridPane.columnIndex="3" />
        <Button fx:id="btnConverseNimply" minWidth="32.0" onAction="#onButtonClick" text="↚" GridPane.columnIndex="4" />
        
        <!-- Row 2 -->
        <Button fx:id="btnG" minWidth="32.0" onAction="#onButtonClick" text="G" GridPane.rowIndex="2" />
        <Button fx:id="btnH" minWidth="32.0" onAction="#onButtonClick" text="H" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btnNand" minWidth="32.0" onAction="#onButtonClick" text="↑" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <Button fx:id="btnNor" minWidth="32.0" onAction="#onButtonClick" text="↓" GridPane.columnIndex="4" GridPane.rowIndex="1" />
        
        <!-- Row 3 -->
        <Button fx:id="btnE" minWidth="32.0" onAction="#onButtonClick" text="E" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btnF" minWidth="32.0" onAction="#onButtonClick" text="F" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button fx:id="btnBiconditional" minWidth="32.0" onAction="#onButtonClick" text="↔" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        <Button fx:id="btnXor" minWidth="32.0" onAction="#onButtonClick" text="⊕" GridPane.columnIndex="4" GridPane.rowIndex="2" />
        
        <!-- Row 4 -->
        <Button fx:id="btnC" minWidth="32.0" onAction="#onButtonClick" text="C" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Button fx:id="btnD" minWidth="32.0" onAction="#onButtonClick" text="D" GridPane.rowIndex="3" />
        <Button fx:id="btnImplyInvers" minWidth="32.0" onAction="#onButtonClick" text="←" GridPane.columnIndex="3" GridPane.rowIndex="3" />
        <Button fx:id="btnImply" minWidth="32.0" onAction="#onButtonClick" text="→" GridPane.columnIndex="4" GridPane.rowIndex="3" />
        
        <!-- Row 5 -->
        <Button fx:id="btnA" minWidth="32.0" onAction="#onButtonClick" text="A" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Button fx:id="btnB" minWidth="32.0" onAction="#onButtonClick" text="B" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button fx:id="andBtn" minWidth="32.0" onAction="#onButtonClick" prefWidth="28.0" text="∧" GridPane.columnIndex="3" GridPane.rowIndex="4" />
        <Button fx:id="orBtn" minWidth="32.0" onAction="#onButtonClick" text="∨" GridPane.columnIndex="4" GridPane.rowIndex="4" />
        
        <!-- Row 6 -->
        <Button fx:id="btnFalse" minWidth="32.0" onAction="#onButtonClick" text="0" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Button fx:id="btnTrue" minWidth="32.0" onAction="#onButtonClick" text="1" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Button fx:id="notBtn" minWidth="32.0" onAction="#onButtonClick" text="¬" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button fx:id="btnExec" minWidth="68.5" onAction="#calculate" text="Calculate" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="5" />
      <Button fx:id="btnClearScreen" minWidth="32.0" onAction="#clearScreen" text="AC" />
      <Button fx:id="btnI" minWidth="32.0" onAction="#onButtonClick" text="I" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button fx:id="btnJ" minWidth="32.0" onAction="#onButtonClick" text="L" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button fx:id="btnK" minWidth="32.0" onAction="#onButtonClick" text="K" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btnL" minWidth="32.0" onAction="#onButtonClick" text="J" GridPane.rowIndex="1" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
